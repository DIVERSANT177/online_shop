<div id="<%= dom_id order %>">
<tr>
  <td><%= link_to order.name, order %></td>
  <td><%= order.address %></td>
  <td><%= order.email %></td>
  <td><%= order.pay_type %></td>
  <td>
    <%= button_to 'Изменить', edit_order_path(order), method: :get, class: "btn btn-secondary mb-3" %>
    <%= button_to 'Удалить', order, method: :delete, class: "btn btn-danger mb-3" %>
  </td>
</tr>
</div>
