<div class="container py-4">
  <!-- Уведомление -->
  <% if notice %>
    <div class="alert alert-success" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <!-- Заголовок -->
  <h1 class="mb-4"><%= t('pages.orders') %></h1>

  <!-- Список заказов в виде карточек -->
  <div id="orders-items" class="row g-4">
    <%= render @orders %>
  </div>

  <!-- Пагинация -->
  <nav aria-label="Pagination" class="mt-4">
    <%= paginate @orders %>
  </nav>
</div>
