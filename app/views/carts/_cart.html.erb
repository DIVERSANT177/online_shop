<div class="container-fluid px-3">
  <% unless cart.line_items.empty? %>
    <div class="d-flex justify-content-between align-items-center mt-3 mb-4">
      <h2><%= t('pages.cart') %></h2>
      <%= button_to t('btn.delete'), @cart, method: :delete, data: { confirm: 'Вы уверены?' }, class: "btn btn-danger btn-sm" %>
    </div>

    <div id="cart-items">
      <%= render partial: 'line_items/line_item_with_btn', collection: cart.line_items, as: :line_item %>
    </div>

    <div class="mt-4 text-end">
      <h5><%= t('product.sum_price') %>: <span id="total-sum"><%= number_to_currency(set_currency(cart.total_price)) %></span></h5>
    </div>

    <div class="mt-3 mb-5 text-end">
      <%= button_to t('btn.form'), new_order_path, method: :get, class: "btn btn-success" %>
    </div>

  <% else %>
    <div class="text-center my-5">
      <h4><%= t('carts.empty_cart') %></h4>
    </div>
  <% end %>
</div>
