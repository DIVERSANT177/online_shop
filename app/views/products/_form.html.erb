
<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :Заголовок, style: "display: block", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div>
    <%= form.label :Описание, style: "display: block", class: "form-label" %>
    <%= form.text_area :description, rows: 6, class: "form-control" %>
  </div>

  <div>
    <%= form.label :"Ссылка на изображение", style: "display: block", class: "form-label" %>
    <%= form.text_field :image_url, class: "form-control" %>
  </div>

  <div>
    <%= form.label :Цена, style: "display: block", class: "form-label" %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="mt-3 text-center">
    <%= form.submit :Отправить, class: "btn btn-primary" %>
  </div>
<% end %>
