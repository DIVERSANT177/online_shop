<div class="w-25 mx-auto">
<h2>Измените пароль</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Новый пароль", class: "form-label" %><br />
    <% if @minimum_password_length %>
      <em>(Минимум <%= @minimum_password_length %> символов)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Подтвердите пароль", class: "form-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="actions text-center">
    <%= f.submit "Изменить пароль", class: "btn btn-primary my-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
