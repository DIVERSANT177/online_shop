<div class="d-flex justify-content-between align-items-center border-bottom py-3 px-2">
  <div class="flex-grow-1">
    <strong><%= line_item.product.title %></strong>
  </div>
  <div class="" style="min-width: 100px;">
    <%= number_to_currency(set_currency(line_item.product.price)) %>
  </div>
  <div class="text-center" style="min-width: 60px;">
    x<%= line_item.quantity %>
  </div>
  <div class="text-end" style="min-width: 100px;">
    <%= number_to_currency(set_currency(line_item.total_price)) %>
  </div>
  <div class="text-end ms-3">
    <%= button_to line_item, method: :delete, confirm: 'Вы уверены?', class: "btn btn-danger" do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  </div>
</div>


